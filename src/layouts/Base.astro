---
import "../styles/global.css";
const {
  title = 'Sebasti√°n Vedoya M. ‚Äî Comunicaci√≥n Estrat√©gica',
  description = 'Estratega en comunicaci√≥n con m√°s de 10 a√±os de experiencia en medios y gobierno. Me dedico a buscar respuestas complejas para entornos complejos.'
} = Astro.props;
---
<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content={description} />
  <title>{title}</title>

  <!-- Favicon con base del sitio -->
  <link rel="icon" href={new URL('/favicon.svg', Astro.site).pathname} type="image/svg+xml" />

  <!-- Preferencia de color -->
  <meta name="color-scheme" content="dark light" />
  <meta name="theme-color" content="#0a0a0a" media="(prefers-color-scheme: dark)" />

  <!-- IBM Plex Sans -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600;700&display=swap"
    rel="stylesheet"
  />

  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-03ZMGB2V69"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){ dataLayer.push(arguments); }
    gtag('js', new Date());
    gtag('config', 'G-03ZMGB2V69');
  </script>
</head>
<body>
  <slot />

  <!-- Fade-in global (.reveal y [data-fade]) -->
 <script is:inline>
  // Marca que hay JS para que se activen estilos html.js
  document.documentElement.classList.add('js');

  // Detecta direcci√≥n de scroll
  let lastY = window.scrollY;
  let dir = 'down';
  window.addEventListener('scroll', () => {
    const y = window.scrollY;
    dir = y > lastY ? 'down' : 'up';
    lastY = y;
  }, { passive: true });

  // Elementos con fade
  const targets = document.querySelectorAll('.reveal,[data-fade],.stage-item');

  if (targets.length) {
    const io = new IntersectionObserver((entries) => {
      for (const e of entries) {
        const el = e.target;

        if (e.isIntersecting) {
          // ‚úÖ Fade-in temprano al bajar (y tambi√©n si entras desde abajo)
          el.classList.add('revealed','reveal--in','fade-in--visible','is-on');
          el.dataset.seen = '1';
        } else {
          // üîÅ Fade-out solo al subir, y con umbral tard√≠o (cuando ya pas√≥ bien abajo)
          if (dir === 'up') {
            const rect = el.getBoundingClientRect();
            const vh = window.innerHeight || document.documentElement.clientHeight;
            // Quita clases s√≥lo cuando el elemento est√° casi fuera, muy abajo del viewport
            if (rect.top > vh * 0.98) {
              el.classList.remove('revealed','reveal--in','fade-in--visible','is-on');
              el.dataset.seen = '0';
            }
          }
          // Si vas bajando, NO quitamos clases: mantiene el progreso
        }
      }
    }, {
      // Disparo temprano para que no tarde en entrar
      rootMargin: '0% 0% -75% 0%',
      threshold: 0
    });

    targets.forEach(t => io.observe(t));
  }
</script>
</body>
</html>
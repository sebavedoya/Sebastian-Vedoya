---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import System from "../components/System.astro";
import Projects from "../components/Projects.astro";
import Reflections from "../components/Reflections.astro";
import Press from "../components/Press.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import ScrollShow from "../components/ScrollShow.astro"; // si quieres mantenerlo

const foto = new URL('/assets/foto-hero.jpeg', Astro.site).pathname;
---
<Base
  title="Sebastián Vedoya M. — Comunicación Estratégica"
  description="Estratega en comunicación con más de 10 años de experiencia en medios y gobierno. Trabajo en buscar respuestas complejas para entornos complejos."
>
  <Header data-fade />
  <main>
    <Hero foto={foto} data-fade />
    <System />             {/* Frase destacada inmediatamente bajo el hero */}
    <Projects />           {/* Scroll-show */}
    <Reflections />        {/* Scroll-show */}
    <Press />              {/* Carrusel */}
    <ScrollShow />         {/* (opcional) scrollytelling sin imágenes */}
    <Contact data-fade />
  </main>
  <Footer data-fade />
</Base>
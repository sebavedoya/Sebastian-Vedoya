---
// src/pages/index.astro
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import System from "../components/System.astro";
import Projects from "../components/Projects.astro";
import Reflections from "../components/Reflections.astro";
import Press from "../components/Press.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";

// Foto y CV
const foto = new URL('/assets/foto-hero.jpeg', Astro.site).pathname;
---

<Base
  title="Sebastián Vedoya M. — Comunicación Estratégica"
  description="Estratega en comunicación con más de 10 años de experiencia en medios y gobierno. Trabajo en buscar respuestas complejas para entornos complejos."
>
  <Header />
  <main>
    <section data-fade>
      <Hero foto={foto} />
    </section>

    <!-- System ahora es solo la frase destacada (ya con reveal/fade interno) -->
    <section data-fade>
      <System />
    </section>

    <section data-fade>
      <Projects />
    </section>

    <section data-fade>
      <Reflections />
    </section>

    <section data-fade>
      <Press />
    </section>

    <section data-fade>
      <Contact />
    </section>
  </main>
  <Footer />
</Base>
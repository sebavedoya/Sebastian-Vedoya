---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import System from "../components/System.astro";
import Experience from "../components/Experience.astro";
import ProjectsParallax from "../components/ProjectsParallax.astro";
import ReflectionsModern from "../components/ReflectionsModern.astro";
import Press from "../components/Press.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";

// Ruta robusta para la foto del hero (respeta BASE_URL en GitHub Pages)
const foto = new URL('/assets/foto-hero.jpeg', Astro.site).pathname;
---

<Base
  title="Sebastián Vedoya M. — Comunicación Estratégica"
  description="Estratega en comunicación con más de 10 años de experiencia en medios y gobierno. Me dedico a buscar respuestas complejas para entornos complejos."
>
  <Header />

  <main>
    <Hero foto={foto} />

    {/* Sistema */}
    <System />

    {/* Experiencia (logos + carrusel) */}
    <Experience />

    {/* Proyectos — Scroll Parallax Cards */}
    <ProjectsParallax />

    {/* Reflexiones — formato moderno con apertura completa al clic */}
    <ReflectionsModern />

    {/* Prensa */}
    <Press />

    {/* Contacto */}
    <Contact />
  </main>

  <Footer />
</Base>
<section id="reflexiones" class="section">
  <div class="container">
    <h2 class="h2">Reflexiones</h2>
    <p class="section-intro">Ensayos breves sobre estrategia, vocerías y comunicación pública.</p>

    <div class="r-grid">
      {items.map((r) => (
        <article class="r-card reveal" id={`ref-${r.id}`}>
          <header class="r-head">
            <h3 class="r-title">{r.title}</h3>
            <p class="r-dek">{r.dek}</p>
          </header>
          <footer class="r-actions">
            <button class="btn-outline r-cta" data-open={r.id} aria-haspopup="dialog" aria-controls={`dlg-${r.id}`}>
              Leer completa
            </button>
          </footer>

          {/* Modal */}
          <dialog class="r-modal" id={`dlg-${r.id}`} aria-labelledby={`dlg-title-${r.id}`}>
            <form method="dialog" class="r-close-wrap">
              <button class="r-close" aria-label="Cerrar">✕</button>
            </form>
            <div class="r-modal-inner">
              <h3 id={`dlg-title-${r.id}`} class="r-modal-title">{r.title}</h3>
              <article class="r-modal-body">
                {r.body.split("\n\n").map((p) => <p class="prose">{p}</p>)}
              </article>
            </div>
          </dialog>
        </article>
      ))}
    </div>
  </div>

  <script is:inline>
    // Abrir modales
    document.querySelectorAll('.r-cta').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = btn.getAttribute('data-open');
        const dlg = document.getElementById('dlg-' + id);
        if (!dlg) return;
        if (typeof dlg.showModal === 'function') dlg.showModal();
        else dlg.setAttribute('open','open');
      });
    });

    // Cerrar por backdrop o ESC
    document.querySelectorAll('.r-modal').forEach(dlg => {
      dlg.addEventListener('click', (e) => {
        const rect = dlg.getBoundingClientRect();
        const isBackdrop = e.clientX < rect.left || e.clientX > rect.right || e.clientY < rect.top || e.clientY > rect.bottom;
        if (isBackdrop) dlg.close();
      });
      dlg.addEventListener('cancel', (e) => { e.preventDefault(); dlg.close(); });
    });
  </script>
</section>

<style>
  .r-grid{
    display:grid;
    grid-template-columns:repeat(auto-fit,minmax(280px,1fr));
    gap:1rem;
  }
  .r-card{
    background:#11161d; border:1px solid #1f2a37;
    border-radius:16px; padding:1rem 1rem 0.9rem;
    box-shadow:0 8px 24px rgba(0,0,0,.45);
  }
  .r-head{ margin-bottom:.6rem }
  .r-title{ margin:0 0 .35rem; font-size:1.05rem; color:#eaf2f8 }
  .r-dek{ margin:0; color:#b9c6d6 }
  .r-actions{ margin-top:.8rem }
  .r-cta{ font-weight:700 }

  /* Modal */
  .r-modal{
    width:min(900px,94vw); max-height:92dvh;
    border:none; padding:0; border-radius:18px; overflow:hidden;
    background:#0e141a; color:#e6eef4;
    box-shadow:0 30px 120px rgba(0,0,0,.65);
  }
  .r-modal::backdrop{ background:rgba(6,10,14,.55); backdrop-filter:blur(3px) saturate(1.1); }
  .r-close-wrap{ position:absolute; top:10px; right:10px; z-index:2 }
  .r-close{ width:36px; height:36px; border-radius:999px; cursor:pointer;
    background:#121a22; border:1px solid #263242; color:#e6eef4; }
  .r-modal-inner{ padding:1.25rem 1.25rem 1.4rem; }
  .r-modal-title{ margin:.2rem 0 .8rem; font-size:1.35rem }
  .r-modal-body p{ margin:.6rem 0; }
</style>
---
import { press } from '../data/press';
---
<section id="prensa" class="section reveal">
  <div class="container">
    <h2 class="h2">Art√≠culos en Prensa</h2>
    <div class="press-grid">
      {press.map(item => (
        <a class="press-card" href={item.url} target="_blank" rel="noopener">
          <img src={item.src} alt={item.title} loading="lazy" />
          <div class="press-meta">{item.outlet}</div>
          <h3 class="press-title">{item.title}</h3>
        </a>
      ))}
    </div>
  </div>
</section>

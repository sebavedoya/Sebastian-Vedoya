---
export interface Props {
  cv?: string;
}

const { cv } = Astro.props;
// Fallback robusto para Pages: requiere public/files/CV.pdf
const cvUrl = cv ?? new URL('/files/CV.pdf', Astro.site).pathname;
---

<section id="contacto" class="contact">
  <div class="container">
    <h2>Contacto</h2>
    <p>¿Conversamos? Escríbeme y revisa mi CV.</p>

    <div class="cta-row">
      <!-- ✅ usar cvUrl, no {cv} directo -->
      <a class="btn" href={cvUrl} target="_blank" rel="noopener">Descargar CV</a>
      <a class="chip" href="mailto:seba.vedoya@gmail.com">seba.vedoya@gmail.com</a>
      <a class="chip" href="https://www.linkedin.com/in/sebastianvedoyam/" target="_blank" rel="noopener">LinkedIn</a>
    </div>
  </div>
</section>
---
export interface Props { cv?: string; }
const { cv } = Astro.props;
// Ruta absoluta robusta para GitHub Pages (proyecto bajo /Sebastian-Vedoya)
const cvUrl = cv ?? new URL('/Sebastian-Vedoya/files/CV.pdf', Astro.site).href;
---

<section id="contacto" class="contact">
  <div class="container">
    <h2>Contacto</h2>
    <p>¿Conversamos? Escríbeme y revisa mi CV.</p>
    <div class="cta-row">
      <a class="btn" href={cvUrl} download>Descargar CV</a>
      <a class="chip" href="mailto:seba.vedoya@gmail.com">seba.vedoya@gmail.com</a>
      <a class="chip" href="https://www.linkedin.com/in/sebastianvedoyam/" target="_blank" rel="noopener">LinkedIn</a>
    </div>
  </div>
</section>
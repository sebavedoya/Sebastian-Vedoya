---
/** Frase destacada bajo el Hero */
const frase =
  "Ningún actor puede controlar el entorno sin igualarlo en complejidad; y si no puede igualarlo, debe aprender a domesticarlo.";
const autor = "Ross Ashby";
---

<section id="sistema" class="section reveal" aria-labelledby="sistema-title">
  <div class="container">
    <h2 id="sistema-title" class="visually-hidden">Sistema</h2>
    <div class="system-quote">
      {frase} <span>— {autor}</span>
    </div>
  </div>

  <script is:inline>
    // Activa el fade-in al entrar en viewport
    const root = document.currentScript.closest('.reveal');
    const io = new IntersectionObserver((entries) => {
      for (const e of entries) if (e.isIntersecting) root.classList.add('revealed');
    }, { threshold: 0.15 });
    io.observe(root);
  </script>
</section>

<style>
  /* Oculta el h2 para accesibilidad sin afectar el layout */
  .visually-hidden{
    position:absolute!important; width:1px; height:1px; padding:0; margin:-1px;
    overflow:hidden; clip:rect(0,0,0,0); white-space:nowrap; border:0;
  }
</style>
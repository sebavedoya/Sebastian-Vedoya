---
// Experience.astro — Logos centrados, grandes, visibles todos a la vez

const BASE = (import.meta.env.BASE_URL || "/").replace(/\/+$/, "");

const logos = [
  { alt: "La Tercera",              src: `${BASE}/assets/experiencia/latercera.png?v=6` },
  { alt: "Ministerio de Educación", src: `${BASE}/assets/experiencia/mineduc.png?v=6` },
  { alt: "INDAP",                   src: `${BASE}/assets/experiencia/indap.png?v=6` },
  { alt: "Municipalidad de Cerro Navia", src: `${BASE}/assets/experiencia/cerro-navia.png?v=6` },
  { alt: "Publimetro",              src: `${BASE}/assets/experiencia/publimetro.png?v=6` },
  { alt: "Subsecretaría de Telecomunicaciones", src: `${BASE}/assets/experiencia/subtel.png?v=6` },
  { alt: "Televisión Nacional de Chile", src: `${BASE}/assets/experiencia/tvn.png?v=6` },
];
---

<section id="experiencia" class="section section--tight-top" data-fade>
  <div class="container">
    <h2 class="h2" style="margin-bottom:1rem;">Experiencia</h2>

    <div class="exp-grid">
      {logos.map((logo) => (
        <div class="logo-card" title={logo.alt}>
          <img
            class="exp-logo"
            src={logo.src}
            alt={logo.alt}
            loading="lazy"
            decoding="async"
          />
        </div>
      ))}
    </div>
  </div>

  <script is:inline>
    // Fade-in temprano
    (function(){
      const section = document.currentScript.closest('section');
      const TRIGGER_OFFSET = 10;
      function onScroll(){
        const y = window.scrollY || document.documentElement.scrollTop || 0;
        const top = section.offsetTop;
        if (y + window.innerHeight > top + TRIGGER_OFFSET) {
          section.classList.add('fade-in--visible','revealed','reveal--in');
          window.removeEventListener('scroll', onScroll);
        }
      }
      onScroll();
      window.addEventListener('scroll', onScroll, { passive:true });
    })();
  </script>
</section>

<style>
  .exp-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    margin-top: 1.5rem;
  }

  .logo-card {
    width: 180px;
    height: 120px;
    display: grid;
    place-items: center;
    background: #161a20;
    border: 1px solid #222a35;
    border-radius: 14px;
    box-shadow: 0 8px 24px rgba(0,0,0,.35);
    transition: transform .2s ease, box-shadow .2s ease;
  }

  .logo-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 32px rgba(0,0,0,.55);
  }

  .exp-logo {
    max-width: 92%;
    max-height: 92%;
    object-fit: contain;
    display: block;
  }

  @media (max-width: 1040px) {
    .logo-card { width: 160px; height: 110px; }
  }

  @media (max-width: 768px) {
    .logo-card { width: 140px; height: 100px; }
  }

  @media (max-width: 640px) {
    .logo-card { width: 120px; height: 90px; }
  }
</style>
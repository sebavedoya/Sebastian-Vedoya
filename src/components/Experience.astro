<style>
  .xp-carousel {
    position: relative;
    padding: .25rem 2.5rem;
  }

  .xp-track {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
  }
  .xp-track::-webkit-scrollbar { display: none; }

  .xp-item {
    scroll-snap-align: center;
    flex: 0 0 clamp(220px, 28vw, 300px);
  }

  .logo-card {
    display: grid;
    place-items: center;
    background: #181c22;
    border: 1px solid #263243;
    border-radius: 18px;
    box-shadow: 0 10px 26px rgba(0,0,0,.35);
    aspect-ratio: 16 / 10;
    text-decoration: none;
    transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
  }
  .logo-card:hover {
    transform: scale(1.03);
    border-color: #2f3e53;
    box-shadow: 0 16px 32px rgba(0,0,0,.45);
  }

  .logo-wrap {
    width: 100%;
    height: 100%;
    display: grid;
    place-items: center;
    padding: 10px;
  }

  .logo {
    width: auto;
    height: auto;
    max-inline-size: 75%;
    max-block-size: 75%;
    object-fit: contain;
    display: block;
    transform: scale(1);
    transition: transform .25s ease;
  }

  .logo-card:hover .logo {
    transform: scale(1.08);
  }

  /* ðŸ”§ Ajustes uniformes */
  .logo--indap,
  .logo--cerronavia,
  .logo--publimetro {
    max-inline-size: 75%;
    max-block-size: 75%;
    margin: 0 auto;
    align-self: center;
    justify-self: center;
  }

  .xp-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    border-radius: 999px;
    border: 1px solid #263243;
    background: rgba(15,23,42,.78);
    color: #e2e8f0;
    display: grid;
    place-items: center;
    font-size: 22px;
    line-height: 1;
    cursor: pointer;
    backdrop-filter: blur(6px);
    transition: filter .15s ease, opacity .15s ease;
  }

  .xp-btn:hover { filter: brightness(1.1); }
  .xp-btn:disabled { opacity: .35; cursor: default; }
  .xp-btn.prev { left: .25rem; }
  .xp-btn.next { right: .25rem; }

  @media (max-width: 720px) {
    .xp-carousel { padding: .25rem 1.5rem; }
    .xp-btn { width: 36px; height: 36px; }
  }
</style>
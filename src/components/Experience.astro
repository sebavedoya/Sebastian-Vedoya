---
/** Carrusel de Experiencia (solo logos, centrados y linkeados) */
const BASE = (import.meta.env.BASE_URL || "/").replace(/\/+$/, "");

const items = [
  { id:"latercera",   alt:"La Tercera",                         href:"https://www.latercera.com",                      src:`${BASE}/assets/experiencia/latercera.png` },
  { id:"mineduc",     alt:"Ministerio de Educación",            href:"https://www.mineduc.cl",                         src:`${BASE}/assets/experiencia/mineduc.png` },
  { id:"indap",       alt:"INDAP",                              href:"https://www.indap.gob.cl",                      src:`${BASE}/assets/experiencia/indap.png` },
  { id:"cerro-navia", alt:"Municipalidad de Cerro Navia",       href:"https://www.cerronavia.cl",                     src:`${BASE}/assets/experiencia/cerro-navia.png` },
  { id:"publimetro",  alt:"Publimetro",                         href:"https://www.publimetro.cl",                     src:`${BASE}/assets/experiencia/publimetro.png` },
  { id:"subtel",      alt:"Subsecretaría de Telecomunicaciones",href:"https://www.subtel.gob.cl",                     src:`${BASE}/assets/experiencia/subtel.png` },
  { id:"tvn",         alt:"Televisión Nacional de Chile",       href:"https://www.tvn.cl",                             src:`${BASE}/assets/experiencia/tvn.png` },
];
---

<section id="experiencia" class="section section--tight-top">
  <div class="container">
    <h2 class="h2">Experiencia</h2>

    <div class="xp-carousel">
      <button class="xp-btn prev" aria-label="Anterior" type="button">‹</button>

      <ul class="xp-track" id="xpTrack" role="list">
        {items.map((it) => (
          <li class="xp-item" role="listitem">
            <a class="logo-card" href={it.href} target="_blank" rel="noopener">
              <span class="logo-wrap">
                <img class="logo" src={it.src} alt={it.alt} loading="lazy" />
              </span>
            </a>
          </li>
        ))}
      </ul>

      <button class="xp-btn next" aria-label="Siguiente" type="button">›</button>
    </div>
  </div>
</section>

<script is:inline>
  // navegación simple por desplazamiento
  const track = document.getElementById('xpTrack');
  const btnPrev = document.currentScript.parentElement.querySelector('.xp-btn.prev');
  const btnNext = document.currentScript.parentElement.querySelector('.xp-btn.next');
  const STEP = Math.round(track.clientWidth * 0.75);

  btnPrev.addEventListener('click', () => track.scrollBy({ left: -STEP, behavior: 'smooth' }));
  btnNext.addEventListener('click', () => track.scrollBy({ left:  STEP, behavior: 'smooth' }));
</script>

<style>
  .xp-carousel {
    position: relative;
    padding: .25rem 2.5rem;
  }

  .xp-track {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
  }
  .xp-track::-webkit-scrollbar { display: none; }

  /* Cada tarjeta: mismo ancho, misma relación de aspecto */
  .xp-item {
    scroll-snap-align: center;
    flex: 0 0 clamp(240px, 28vw, 320px);
  }

  .logo-card {
    display: grid;
    place-items: center;
    background: #181c22;
    border: 1px solid #263243;
    border-radius: 18px;
    box-shadow: 0 10px 26px rgba(0,0,0,.35);
    aspect-ratio: 16 / 10;
    text-decoration: none;
    transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
  }
  .logo-card:hover {
    transform: scale(1.03);
    border-color: #2f3e53;
    box-shadow: 0 16px 32px rgba(0,0,0,.45);
  }

  .logo-wrap {
    width: 100%;
    height: 100%;
    display: grid;
    place-items: center;
    padding: 12px; /* margen interno para que ningún logo se “salga” */
  }

  /* ⬇️ Tamaño visual idéntico entre logos */
  .logo {
    width: auto;
    height: auto;
    max-inline-size: 78%;
    max-block-size: 78%;
    object-fit: contain;
    display: block;
    transform: scale(1);
    transition: transform .25s ease;
  }
  .logo-card:hover .logo { transform: scale(1.08); }

  .xp-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    border-radius: 999px;
    border: 1px solid #263243;
    background: rgba(15,23,42,.78);
    color: #e2e8f0;
    display: grid;
    place-items: center;
    font-size: 22px;
    line-height: 1;
    cursor: pointer;
    backdrop-filter: blur(6px);
    transition: filter .15s ease, opacity .15s ease;
  }
  .xp-btn:hover { filter: brightness(1.1); }
  .xp-btn.prev { left: .25rem; }
  .xp-btn.next { right: .25rem; }

  @media (max-width: 720px) {
    .xp-carousel { padding: .25rem 1.5rem; }
    .xp-btn { width: 36px; height: 36px; }
  }
</style>
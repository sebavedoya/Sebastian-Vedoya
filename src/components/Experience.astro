---
// Carrusel/Grilla de logos de instituciones (solo logos centrados)
const BASE = (import.meta.env.BASE_URL || "/").replace(/\/+$/, "");

const items = [
  { key: "latercera",    alt: "La Tercera",                             src: `${BASE}/assets/experiencia/latercera.png` },
  { key: "mineduc",      alt: "Ministerio de Educación",                src: `${BASE}/assets/experiencia/mineduc.png` },
  { key: "indap",        alt: "INDAP",                                  src: `${BASE}/assets/experiencia/indap.png` },
  { key: "cerronavia",   alt: "Municipalidad de Cerro Navia",           src: `${BASE}/assets/experiencia/cerro-navia.png` },
  { key: "publimetro",   alt: "Publimetro",                             src: `${BASE}/assets/experiencia/publimetro.png` },
  { key: "subtel",       alt: "SUBTEL",                                 src: `${BASE}/assets/experiencia/subtel.png` },
  { key: "tvn",          alt: "Televisión Nacional de Chile",           src: `${BASE}/assets/experiencia/tvn.png` },
];
---

<section id="experiencia" class="section section--tight-top" aria-label="Experiencia">
  <div class="container">
    <h2 class="h2">Experiencia</h2>

    <ul class="xp-grid" data-fade>
      {items.map((it) => (
        <li class="logo-card reveal">
          <div class="logo-wrap">
            <img class={`logo logo--${it.key}`} src={it.src} alt={it.alt} loading="lazy" />
          </div>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  /* Contenedor */
  .xp-grid{
    list-style:none; margin:0; padding:0;
    display:grid; gap:1rem;
    grid-template-columns:repeat(auto-fit,minmax(180px,1fr));
  }

  /* Tarjeta */
  .logo-card{
    background:#181c22;
    border:1px solid #263243;
    border-radius:18px;
    box-shadow:0 10px 26px rgba(0,0,0,.35);
    aspect-ratio: 16 / 10;              /* espacio estable para centrar */
    display:grid; place-items:center;    /* centra el wrapper */
  }

  /* Wrapper: ocupa todo y centra el PNG */
  .logo-wrap{
    inline-size:100%;
    block-size:100%;
    display:grid; place-items:center;
    padding:8px;                         /* pequeño respiro en bordes */
  }

  /* Regla general de logos: grandes, pero contenidos */
  .logo{
    max-inline-size:78%;
    max-block-size:78%;
    width:auto; height:auto;
    object-fit:contain;
    display:block;
    image-rendering:auto;
  }

  /* Ajustes finos por logo (para igualar visualmente) */
  .logo--mineduc{   /* estaba sobredimensionado */
    max-inline-size:62%;
    max-block-size:62%;
  }
  .logo--latercera{  max-inline-size:72%; max-block-size:72%; }
  .logo--indap{      max-inline-size:74%; max-block-size:74%; }
  .logo--cerronavia{ max-inline-size:74%; max-block-size:74%; }
  .logo--publimetro{ max-inline-size:80%; max-block-size:80%; } /* centrado perfecto en la caja */
  .logo--subtel{     max-inline-size:74%; max-block-size:74%; }
  .logo--tvn{        max-inline-size:72%; max-block-size:72%; }

  @media (max-width:720px){
    .xp-grid{ grid-template-columns:repeat(2,1fr); }
  }
</style>